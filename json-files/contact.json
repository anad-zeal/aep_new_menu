{
  "type": "contactForm",
  "title": "Contact",
  "content": {
    "wrapper": {
      "tag": "div",
      "attributes": {
        "class": "container"
      }
    },
    "form": {
      "tag": "form",
      "attributes": {
        "id": "contact",
        "action": "/submit-contact",
        "method": "post"
      },
      "headers": [
        { "tag": "h3", "text": "Quick Contact" },
        { "tag": "h4", "text": "Contact today, and get a reply within 24 hours!" }
      ],
      "fields": [
        {
          "tag": "fieldset",
          "children": [
            {
              "tag": "input",
              "attributes": {
                "placeholder": "Your Name",
                "type": "text",
                "required": true,
                "autofocus": true
              }
            }
          ]
        },
        {
          "tag": "fieldset",
          "children": [
            {
              "tag": "input",
              "attributes": {
                "placeholder": "Your Email Address",
                "type": "email",
                "required": true
              }
            }
          ]
        },
        {
          "tag": "fieldset",
          "children": [
            {
              "tag": "input",
              "attributes": {
                "placeholder": "Your Phone Number",
                "type": "tel",
                "pattern": "[0-9]{3}-[0-9]{3}-[0-9]{4}",
                "required": true
              }
            }
          ]
        },
        {
          "tag": "fieldset",
          "children": [
            {
              "tag": "input",
              "attributes": {
                "placeholder": "Your Website (http:// or https://)",
                "type": "url",
                "required": true
              }
            }
          ]
        },
        {
          "tag": "fieldset",
          "children": [
            {
              "tag": "textarea",
              "attributes": {
                "placeholder": "Type your Message Here...",
                "required": true
              }
            }
          ]
        },
        {
          "tag": "fieldset",
          "children": [
            {
              "tag": "button",
              "text": "Submit",
              "attributes": {
                "name": "submit",
                "type": "submit",
                "id": "contact-submit",
                "data-submit": "...Sending"
              }
            }
          ]
        }
      ]
    }
  }
}