{
  "slideshowTemplate": {
    "previousButton": {
      "imgSrc": "assets/images/misc-images/arrow-left.png",
      "buttonId": "prev-slide"
    },
    "nextButton": {
      "imgSrc": "assets/images/misc-images/arrow-right.png",
      "buttonId": "next-slide"
    },
    "caption": { "paragraphId": "caption-text" },
    "rtnArrow": { "imgSrc": "assets/images/misc-images/arrow-return.png" },
    "wrapper": { "tag": "div", "class": "container" }
  },
  "pages": {
    "home": {
      "type": "cardGrid",
      "title": "Home",
      "content": [
        {
          "type": "card",
          "content": {
            "type": "landingMenuItem",
            "link": { "href": "/artworks", "text": "Artworks" },
            "paragraph": "Explore various series of paintings."
          }
        },
        {
          "type": "card",
          "content": {
            "type": "landingMenuItem",
            "link": { "href": "/biography", "text": "Biography" },
            "paragraph": "About the artist."
          }
        },
        {
          "type": "card",
          "content": {
            "type": "landingMenuItem",
            "link": { "href": "/contact", "text": "Contact" },
            "paragraph": "Get in touch."
          }
        }
      ]
    },
    "artworks": {
      "type": "cardGrid",
      "title": "Artworks",
      "content": [
        {
          "type": "card",
          "content": {
            "type": "landingMenuItem",
            "link": { "href": "/encaustic-paintings", "text": "Encaustic" },
            "paragraph": "Heated beeswax and colored pigments."
          }
        },
        {
          "type": "card",
          "content": {
            "type": "landingMenuItem",
            "link": { "href": "/drip-series-paintings", "text": "Drip Series" },
            "paragraph": "Controlled spontaneous dripping technique."
          }
        },
        {
          "type": "card",
          "content": {
            "type": "landingMenuItem",
            "link": { "href": "/black-and-white-paintings", "text": "Black & White" },
            "paragraph": "Monochromatic studies."
          }
        },
        {
          "type": "card",
          "content": {
            "type": "landingMenuItem",
            "link": { "href": "/decorative", "text": "Decorative" },
            "paragraph": "Intricate and expressive decorative works."
          }
        }
      ]
    },
    "encaustic-paintings": {
      "type": "slideshow",
      "title": "Encaustic Paintings",
      "gallerySource": "encaustic-slideshow.json"
    },
    "drip-series-paintings": {
      "type": "slideshow",
      "title": "Drip Series",
      "gallerySource": "drip-series-slideshow.json"
    },
    "black-and-white-paintings": {
      "type": "slideshow",
      "title": "Black and White",
      "gallerySource": "black-and-white-slideshow.json"
    },
    "decorative": {
      "type": "slideshow",
      "title": "Decorative",
      "gallerySource": "decorative-slideshow.json"
    },
    "biography": {
      "type": "contentSection",
      "title": "Biography",
      "content": {
        "tag": "article",
        "attributes": { "class": "content-section bio" },
        "paragraphs": [
          "Alexis Elza is an artist with 20 years of experience...",
          "Her work explores the boundaries between structure and chaos."
        ]
      }
    },
    "contact": {
      "type": "contactForm",
      "title": "Contact",
      "content": {
        "wrapper": { "tag": "div", "attributes": { "class": "container" } },
        "form": {
          "tag": "form",
          "attributes": { "id": "contact", "action": "#", "method": "post" },
          "headers": [{ "tag": "h3", "text": "Quick Contact" }]
        },
        "fields": [
          {
            "tag": "input",
            "attributes": { "placeholder": "Your Name", "type": "text", "required": true }
          },
          {
            "tag": "input",
            "attributes": { "placeholder": "Your Email", "type": "email", "required": true }
          },
          { "tag": "textarea", "attributes": { "placeholder": "Message", "required": true } },
          { "tag": "button", "text": "Submit", "attributes": { "type": "submit" } }
        ]
      }
    }
  }
}
