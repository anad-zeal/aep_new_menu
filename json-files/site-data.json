{
  "slideshowTemplate": {
    "previousButton": {
      "imgSrc": "assets/images/misc-images/arrow-left.png",
      "buttonId": "prev-slide"
    },
    "nextButton": {
      "imgSrc": "assets/images/misc-images/arrow-right.png",
      "buttonId": "next-slide"
    },
    "caption": {
      "paragraphId": "caption-text"
    },
    "rtnArrow": {
      "imgSrc": "assets/images/misc-images/arrow-return.png"
    },
    "wrapper": {
      "tag": "div",
      "class": "container"
    },
    "gallerySource": ""
  },
  "pages": {
    "home": {
      "type": "cardGrid",
      "title": "Home",
      "content": [
        {
          "type": "card",
          "content": {
            "type": "landingMenuItem",
            "link": { "href": "/artworks", "text": "Artworks" },
            "paragraph": "Explore various series of paintings."
          }
        },
        {
          "type": "card",
          "content": {
            "type": "landingMenuItem",
            "link": { "href": "/biography", "text": "Biography" },
            "paragraph": "About the artist."
          }
        },
        {
          "type": "card",
          "content": {
            "type": "landingMenuItem",
            "link": { "href": "/contact", "text": "Contact" },
            "paragraph": "Get in touch."
          }
        }
      ]
    },
    "artworks": {
      "type": "cardGrid",
      "title": "Artworks",
      "content": [
        {
          "type": "card",
          "content": {
            "type": "landingMenuItem",
            "link": { "href": "/black-and-white-paintings", "text": "Black and White" },
            "paragraph": "Monochromatic studies."
          }
        },
        {
          "type": "card",
          "content": {
            "type": "landingMenuItem",
            "link": { "href": "/encaustic-paintings", "text": "Encaustic" },
            "paragraph": "Heated beeswax and colored pigments."
          }
        },
        {
          "type": "card",
          "content": {
            "type": "landingMenuItem",
            "link": { "href": "/drip-series-paintings", "text": "Drip Series" },
            "paragraph": "Controlled spontaneous dripping technique."
          }
        },
        {
          "type": "card",
          "content": {
            "type": "landingMenuItem",
            "link": { "href": "/decorative", "text": "Decorative" },
            "paragraph": "Intricate and expressive decorative works."
          }
        },
        {
          "type": "card",
          "content": {
            "type": "landingMenuItem",
            "link": { "href": "/historic-preservation", "text": "Historical" },
            "paragraph": "Restoration and preservation projects."
          }
        },
        {
          "type": "card",
          "content": {
            "type": "landingMenuItem",
            "link": { "href": "/project-series-paintings", "text": "Project Series" },
            "paragraph": "Thematic series and collections."
          }
        }
      ]
    },
    "encaustic-paintings": {
      "type": "slideshow",
      "title": "Encaustic Paintings",
      "gallerySource": "encaustic-slideshow.json"
    },
    "drip-series-paintings": {
      "type": "slideshow",
      "title": "Drip Series",
      "gallerySource": "drip-series-slideshow.json"
    },
    "black-and-white-paintings": {
      "type": "slideshow",
      "title": "Black and White",
      "gallerySource": "black-and-white-slideshow.json"
    },
    "decorative": {
      "type": "slideshow",
      "title": "Decorative",
      "gallerySource": "decorative-slideshow.json"
    },
    "historic-preservation": {
      "type": "slideshow",
      "title": "Historic Preservation",
      "gallerySource": "preservation-slideshow.json"
    },
    "project-series-paintings": {
      "type": "slideshow",
      "title": "Project Series",
      "gallerySource": "projects-slideshow.json"
    },
    "biography": {
      "type": "contentSection",
      "title": "Biography",
      "content": {
        "tag": "article",
        "attributes": {
          "class": "content-section bio"
        },
        "paragraphs": [
          "Alexis Elza is an artist with 20 years of experience...",
          "Her work explores the boundaries between structure and chaos."
        ]
      }
    },
    "contact": {
      "type": "contactForm",
      "title": "Contact",
      "content": {
        "wrapper": {
          "tag": "div",
          "attributes": {
            "class": "container"
          }
        },
        "form": {
          "tag": "form",
          "attributes": {
            "id": "contact",
            "action": "/submit-contact",
            "method": "post"
          },
          "headers": [
            { "tag": "h3", "text": "Quick Contact" },
            {
              "tag": "h4",
              "text": "Contact us today, and get a reply within 24 hours!"
            }
          ]
        },
        "fields": [
          {
            "tag": "input",
            "wrapperTag": "fieldset",
            "attributes": {
              "placeholder": "Your Name",
              "type": "text",
              "required": true,
              "autofocus": true
            }
          },
          {
            "tag": "input",
            "wrapperTag": "fieldset",
            "attributes": {
              "placeholder": "Your Email Address",
              "type": "email",
              "required": true
            }
          },
          {
            "tag": "input",
            "wrapperTag": "fieldset",
            "attributes": {
              "placeholder": "Your Phone Number",
              "type": "tel",
              "pattern": "[0-9]{3}-[0-9]{3}-[0-9]{4}",
              "required": true
            }
          },
          {
            "tag": "input",
            "wrapperTag": "fieldset",
            "attributes": {
              "placeholder": "Your Website (http:// or https://)",
              "type": "url",
              "required": true
            }
          },
          {
            "tag": "textarea",
            "wrapperTag": "fieldset",
            "attributes": {
              "placeholder": "Type your Message Here...",
              "required": true
            }
          },
          {
            "tag": "button",
            "text": "Submit",
            "wrapperTag": "fieldset",
            "attributes": {
              "name": "submit",
              "type": "submit",
              "id": "contact-submit",
              "data-submit": "...Sending"
            }
          }
        ]
      }
    }
  }
}
